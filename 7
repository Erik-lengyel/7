fn print_triangle(height: usize, base_width: usize) {
    for i in 0..height {
        let stars = 1 + 2 * i; // Кількість зірочок в кожному рядку (1, 3, 5, ...)
        let spaces = (base_width - stars) / 2; // Кількість пробілів перед зірочками

        // Виводимо рядок з пробілами і зірочками
        for _ in 0..spaces {
            print!(" ");
        }
        for _ in 0..stars {
            print!("*");
        }
        println!(); // Перехід на новий рядок після кожного рядка трикутника
    }
}

fn print_tree(triangles: usize) {
    let mut base_width = 3; // Початкова ширина основи

    for i in 0..triangles {
        let height = i + 2; // Висота кожного наступного трикутника збільшується
        print_triangle(height, base_width);
        base_width += 2; // Збільшуємо ширину для наступного трикутника
    }
}

fn main() {
    let triangles = 4; // Кількість трикутників, яку хочемо отримати
    print_tree(triangles); // Виклик функції для побудови ялинки
}
